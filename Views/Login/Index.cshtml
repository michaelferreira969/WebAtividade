

@{
    ViewData["Title"] = "Login";
}

<section id="sectionLogin" class="mt-4">
    <div class="container justify-content-center">
        <div class="card w-50 p-4">

            <div class="d-flex justify-content-center">

                <form action="Home/List" method="post">
                    <div class="form-group">
                        <label for="email">Endereço de email</label>
                        <input type="email" class="form-control" id="email" value="@Model.Email" name="email" aria-describedby="emailHelp" placeholder="Seu email">
                        <small id="emailHelp" class="form-text text-muted">Nunca vamos compartilhar seu email, com ninguém.</small>
                    </div>
                    <div class="form-group">
                        <label for="senha">Senha</label>
                        <input type="password" class="form-control" id="senha" value="@Model.Senha" name="senha" placeholder="Senha">
                    </div>
                    <div class="form-group">
                        <label for="senha">Confirmar Senha</label>
                        <input type="password" class="form-control" id="senha" name="senha" placeholder="Repetir Senha">
                    </div>
                    <div class="form-group form-check">
                        <input type="checkbox" class="form-check-input" id="lembrarLogin">
                        <label class="form-check-label" for="lembrarLogin">Lembrar de mim</label>
                    </div>
                    <button type="submit" class="btn btn-primary">Logar</button>
                </form>

            </div>

            <div class="d-flex justify-content-center">
                <div class="mt-4">
                    <small id="Help" class="form-text text-muted">Não possuí cadastro?</small>
                    <a type="button" class="btn btn-warning" asp-controller="CadastroUsuario" asp-action="Index">
                        <span>Fazer Cadastro</span>
                    </a>
                </div>
            </div>

        </div>
    </div>
</section>

@Html.ActionLink("Voltar", "Index", "Home");
